@model IEnumerable<clientManagementMVC_DI.Models.EF.ClientInfo>

@{
    ViewData["Title"] = "Index";
}



@Html.Partial("~/views/shared/partialviews/_greetings.cshtml");
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClientLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClientIsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientIsActive)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Clientid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Clientid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Clientid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
